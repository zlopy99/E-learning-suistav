@model IEnumerable<PIS_projekt.Models.Korisnik>

@{
    ViewData["Title"] = "Admini";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Admini</h1>

<p>
    <a asp-controller="Admin" asp-action="DodajAdmina">Dodaj novog admina</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prezime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lozinka)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Uloga)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prezime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lozinka)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Uloga.NazivUloge)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.KorisnikId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.KorisnikId">Details</a> |
                <a asp-controller="Admin" asp-action="DeleteAdmin" asp-route-id="@item.KorisnikId">Izbriši</a>
            </td>
        </tr>
}
    </tbody>
</table>
