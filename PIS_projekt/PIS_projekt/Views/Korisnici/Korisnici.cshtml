@model PIS_projekt.ViewModels.ZaposleniciVM


@{
    ViewData["Title"] = "Korisnici";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    Pager pager = new Pager();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}
<!-- Page transition-->
<div class="loader-wrapper">
	<span class="loader"><span class="loader-inner"></span></span>
</div>
<div class="row rounded bg-light border-bottom">
    <div class="container">
        <div class="d-inline-flex align-items-center">
            <h1 class="test"><i class="fas fa-users"></i> Zaposlenici</h1>
            <a class="btn btn-outline-primary ml-4" asp-controller="Korisnici" asp-action="DodajZaposlenika">Dodaj novog zaposlenika <i class="fas fa-plus-circle"></i></a>
        </div>
        <div class="table-responsive">
            <table class="table table-hover mt-2 mb-md-0">
                <thead class="thead-dark">
                    <tr>
                        <th>
                            Ime
                        </th>
                        <th>
                            Prezime
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Lozinka
                        </th>
                        <th>
                            Naziv skloništa
                        </th>
                        <th>
                            Grad
                        </th>
                        <th>
                            Opcije
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.zaposlenici)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Ime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Prezime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Lozinka)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NazivSklonista)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Grad)
                            </td>


                            <td>
                                <a asp-controller="Admin" asp-action="UrediZaposlenika" asp-route-id="@item.KorisnikId">Uredi</a> |
                                <a asp-controller="Admin" asp-action="IzbrišiKorisnika" asp-route-id="@item.KorisnikId">Izbriši</a>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th colspan="9" class="text-right p-2">
                            <div>
                                @if (pager.TotalPages > 0)
                                {


                                    <ul class="pagination justify-content-end m-0">
                                        @if (pager.CurrentPage > 1)
                                        {
                                            <li class="page-item">
                                                <a class="page-link" asp-controller="Korisnici" asp-action="PrikazZaposlenika" asp-route-pg="1">Prva</a>
                                            </li>
                                            <li>
                                                <a class="page-link" asp-controller="Korisnici" asp-action="PrikazZaposlenika" asp-route-pg="@(pager.CurrentPage-1)">Prethodna</a>
                                            </li>
                                        }

                                        @for (var pge = pager.StartPage; pge <= pager.EndPage; pge++)
                                        {
                                            <li class="page-item @(pge==pager.CurrentPage ? "active" : "")">
                                                <a class="page-link" asp-controller="Korisnici" asp-action="PrikazZaposlenika" asp-route-pg="@pge"> @pge </a>
                                            </li>
                                        }

                                        @if (pager.CurrentPage < pager.TotalPages)
                                        {
                                            <li>
                                                <a class="page-link" asp-controller="Korisnici" asp-action="PrikazZaposlenika" asp-route-pg="@(pager.CurrentPage+1)">Iduća</a>
                                            </li>
                                            <li class="page-item">
                                                <a class="page-link" asp-controller="Korisnici" asp-action="PrikazZaposlenika" asp-route-pg="@(pager.TotalPages)">Zadnja</a>
                                            </li>
                                        }
                                    </ul>
                                }
                            </div>
                        </th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
