@model IEnumerable<PIS_projekt.Models.UoceneLutalice>

@{
    ViewData["Title"] = "PrijavljeneLutalice";
    Layout = "~/Views/Shared/_LayoutZaposlenik.cshtml";
    Pager pager = new Pager();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}
<!-- Page transition-->
<div class="loader-wrapper">
	<span class="loader"><span class="loader-inner"></span></span>
</div>
<div class="row rounded bg-light border-bottom">
    <div class="container">

        <div class="d-inline-flex align-items-center">
            <h1><i class="fas fa-paw"></i> Prijavljene lutalice</h1>
        </div>

        <div class="table-responsive">
            <table class="table table-hover mt-2 mb-md-0">
                <thead class="thead-dark">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Opis)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DatumPrijave)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Slika)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Grad)
                        </th>
                        <th>
                            Opcije
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.Opis)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DatumPrijave)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Slika)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Grad.NazivGrada)
                            </td>
                            <td>
                                <a asp-controller="Korisnici" asp-action="IzbrisiUocenuLutalicu" asp-route-id="@item.UoceneLutaliceId">Izbriši</a>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th colspan="7" class="text-right p-2">
                            <div>
                                @if (pager.TotalPages > 0)
                                {


                                    <ul class="pagination justify-content-end m-0">
                                        @if (pager.CurrentPage > 1)
                                        {
                                            <li class="page-item">
                                                <a class="page-link" asp-controller="Zivotinje" asp-action="UoceneLutalice" asp-route-pg="1">Prva</a>
                                            </li>
                                            <li>
                                                <a class="page-link" asp-controller="Zivotinje" asp-action="UoceneLutalice" asp-route-pg="@(pager.CurrentPage-1)">Prethodna</a>
                                            </li>
                                        }

                                        @for (var pge = pager.StartPage; pge <= pager.EndPage; pge++)
                                        {
                                            <li class="page-item @(pge==pager.CurrentPage ? "active" : "")">
                                                <a class="page-link" asp-controller="Zivotinje" asp-action="UoceneLutalice" asp-route-pg="@pge"> @pge </a>
                                            </li>
                                        }

                                        @if (pager.CurrentPage < pager.TotalPages)
                                        {
                                            <li>
                                                <a class="page-link" asp-controller="Zivotinje" asp-action="UoceneLutalice" asp-route-pg="@(pager.CurrentPage+1)">Iduća</a>
                                            </li>
                                            <li class="page-item">
                                                <a class="page-link" asp-controller="Zivotinje" asp-action="UoceneLutalice" asp-route-pg="@(pager.TotalPages)">Zadnja</a>
                                            </li>
                                        }
                                    </ul>
                                }
                            </div>
                        </th>
                    </tr>
                </tfoot>
            </table>
            @*<div>
            <a asp-controller="Zivotinje" asp-action="ZivotinjeUSklonistu">Povratak</a>
        </div>*@
        </div>
    </div>
</div>