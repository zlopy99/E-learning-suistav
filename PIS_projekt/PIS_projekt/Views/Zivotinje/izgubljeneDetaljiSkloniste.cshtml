@model PIS_projekt.ViewModels.IzgubljeneVM

@{
    ViewData["Title"] = "izgubljeneDetaljiSkloniste";
    Layout = "~/Views/Shared/_LayoutZaposlenik.cshtml";
}



<div>
    <h4>Detalji</h4>
    <!-- Page transition-->
        <div class="loader-wrapper">
            <span class="loader"><span class="loader-inner"></span></span>
        </div>
    <hr />
    <dl class="row">
        @foreach (var item in Model.izgubljene)
        {
            <dt class="col-sm-2">
                Broj mikročipa
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => item.BrojMikrocipa)
            </dd>
            <dt class="col-sm-2">
                Ime životinje
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => item.Ime)
            </dd>
            <dt class="col-sm-2">
                Naziv pasmine
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => item.Pasmina)
            </dd>
            <dt class="col-sm-2">
                Vrsta životinje
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => item.VrstaZivotinje)
            </dd>
            <dt class="col-sm-2">
                Spol
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => item.Spol)
            </dd>
            <dt class="col-sm-2">
                Kastrat
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => item.Kastrat)
            </dd>
            <dt class="col-sm-2">
                Slika
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => item.Slika)
            </dd>
            <dt class="col-sm-2">
                Lokacija nestanka
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => item.LokacijaNestanka)
            </dd>
            <dt class="col-sm-2">
                Mjesto
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => item.Grad)
            </dd>
            <dt class="col-sm-2">
                Datum nestanka
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => item.DatumNestanka)
            </dd>
            <dt class="col-sm-2">
                Datum prijave
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => item.DatumPrijave)
            </dd>
            <dt class="col-sm-2">
                Kontakt
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => item.Kontakt)
            </dd>

        }

    </dl>
</div>
<div>

    <a asp-controller="Zivotinje" asp-action="IzgubljeneSkloniste">Povratak</a>
</div>
