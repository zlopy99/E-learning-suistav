@model PIS_projekt.ViewModels.SklonisteVM

@{
    ViewData["Title"] = "Skloništa";
    Pager pager = new Pager();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}

<div class="row rounded bg-light border-bottom">
    <div class="container">
        <h1 class="test"><i class="fas fa-warehouse"></i> Skloništa</h1>

        <!--
        <p>
            <a asp-action="Create">Create New</a>
        </p>
        -->
        <div class="table-responsive">
            <table class="table table-hover mt-2 mb-md-0">
                <thead class="thead-dark">
                    <tr>
                        <th>
                            Naziv skloništa
                        </th>
                        <th>
                            Adresa
                        </th>
                        <th>
                            Grad
                        </th>
                        <th>
                            Županija
                        </th>
                        <th>
                            Kapacitet skloništa
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Telefon
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.skloniste)
                    {
                        <tr>

                            <td>
                                <a asp-action="Skloniste" asp-route-id="@item.skloniste_id">
                                    <span>@Html.DisplayFor(modelItem => item.NazivSklonista)</span>
                                </a>
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Adresa)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NazivGrada)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NazivZupanije)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.KapacitetSklonista)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Telefon)
                            </td>

                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th colspan="7" class="text-right p-2">
                            <div>
                                @if (pager.TotalPages > 0)
                                {


                                    <ul class="pagination justify-content-end m-0">
                                        @if (pager.CurrentPage > 1)
                                        {
                                            <li class="page-item">
                                                <a class="page-link" asp-controller="Home" asp-action="Index" asp-route-pg="1">Prva</a>
                                            </li>
                                            <li>
                                                <a class="page-link" asp-controller="Home" asp-action="Index" asp-route-pg="@(pager.CurrentPage-1)">Prethodna</a>
                                            </li>
                                        }

                                        @for (var pge = pager.StartPage; pge <= pager.EndPage; pge++)
                                        {
                                            <li class="page-item @(pge==pager.CurrentPage ? "active" : "")">
                                                <a class="page-link" asp-controller="Home" asp-action="Index" asp-route-pg="@pge"> @pge </a>
                                            </li>
                                        }

                                        @if (pager.CurrentPage < pager.TotalPages)
                                        {
                                            <li>
                                                <a class="page-link" asp-controller="Home" asp-action="Index" asp-route-pg="@(pager.CurrentPage+1)">Iduća</a>
                                            </li>
                                            <li class="page-item">
                                                <a class="page-link" asp-controller="Home" asp-action="Index" asp-route-pg="@(pager.TotalPages)">Zadnja</a>
                                            </li>
                                        }
                                    </ul>
                                }
                            </div>
                        </th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
