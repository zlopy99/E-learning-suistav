<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PIS_projekt</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/fontawesome-free-5.15.4-web/css/all.css" />
    <link rel="stylesheet" href="~/css/Custome.css" />
</head>
<body id="shelter_image" style="display: flex; flex-direction: column;">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-light border-bottom box-shadow mb-3">
            <div class="container">
                <!--<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PIS_projekt</a>-->
                <button class="navbar-toggler navbar-light" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-2">
                        <li class="nav-item">
                            <a class="nav-link btn btn-outline-primary ml-2" asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-warehouse"></i> Skloništa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-outline-primary ml-2" asp-area="" asp-controller="Zivotinje" asp-action="Pronadjene"><i class="fas fa-paw"></i> Životinje</a>
                        </li>
                    </ul>
                    <div class="d-sm-inline-flex m-0 p-0">
                        @*<a class="nav-link btn btn-outline-info ml-2" asp-area="" asp-controller="PrijavaZivotinja" asp-action="IzgubljenLjubimac">Izgubili ste ljubimca?</a>*@
                        <a class="nav-link btn btn-outline-info ml-2" onclick="ShowPopup('@Url.Action("IzgubljenLjubimac", "PrijavaZivotinja",Context.Request.Scheme)', 'Izgubili ste ljubimca? Dajte nam informacije')">Izgubili ste ljubimca?</a>
                        <a class="nav-link btn btn-outline-info ml-2" asp-area="" asp-controller="PrijavaZivotinja" asp-action="Index">Uočili ste lutalicu?</a>
                    </div>
                    <a class="nav-link btn btn-outline-primary ml-2" asp-area="" asp-controller="Login" asp-action="Index"><i class="fas fa-user"></i> Login</a>
                    @*<a class="nav-link btn btn-outline-primary ml-2" onclick="ShowPopup('@Url.Action("Index", "Login",Context.Request.Scheme)', 'Login')"><i class="fas fa-user"></i> Login</a>*@
                </div>
            </div>
        </nav>
    </header>

    <div class="modal fade" tabindex="-1" id="form-modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"></h5>
                    @*<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>*@
                </div>
                <div class="modal-body">

                </div>
            </div>
        </div>
    </div>

    <div class="container my-5">
        <main role="main" class="pb-2">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-light" style="margin-top: auto; position: relative">
        <div class="container w-100">
            &copy; 2022 - PIS_projekt <!-- - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> -->
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
