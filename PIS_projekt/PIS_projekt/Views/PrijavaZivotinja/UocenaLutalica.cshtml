<div class="row">
    <div class="col-md-12">
        <form asp-controller="PrijavaZivotinja" asp-action="Spremi" enctype="multipart/form-data" onsubmit="return JQueryAjaxPost(this)">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GradId" class="control-label"></label>
                <select asp-for="GradId" class="form-control" asp-items="ViewBag.Gradovi">
                    <option disabled selected value="">Izaberite grad</option>
                </select>
                <span asp-validation-for="GradId" class="text-danger"></span>
                <span class="text-danger">@ViewBag.Error</span>
            </div>
            <div class="form-group">
                <label asp-for="Photo" class="control-label"></label>
                <input type="file" asp-for="Photo" class="form-control-file" accept="image/*" />
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Opis" class="control-label"></label>
                <input type="text" asp-for="Opis" class="form-control" />
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Spremi" class="btn btn-primary btn-block"/>
            </div>
        </form>
    </div>
</div>

