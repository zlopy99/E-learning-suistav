@model PIS_projekt.ViewModels.SklonisteVM

@{
    ViewData["Title"] = "Sklonista";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    Pager pager = new Pager();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}

<h1>Sklonista</h1>

<p>
    <a asp-controller="Admin" asp-action="CreateSkloniste">Dodaj novo skloniste</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Naziv skloništa
            </th>
            <th>
                Adresa
            </th>
            <th>
                Grad
            </th>
            <th>
                Županija
            </th>
            <th>
                Kapacitet skloništa
            </th>
            <th>
                Email
            </th>
            <th>
                Telefon
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.skloniste)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NazivSklonista)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Adresa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NazivGrada)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NazivZupanije)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KapacitetSklonista)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefon)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.skloniste_id">Uredi</a>
                    <!--<a asp-action="Details" asp-route-id="@item.skloniste_id">Details</a> |-->
                    <a asp-controller="Admin" asp-action="IzbrisiSkloniste" asp-route-id="@item.skloniste_id">Izbriši</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="container">
    @if (pager.TotalPages > 0)
    {


        <ul class="pagination justify-content-end">
            @if (pager.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Admin" asp-action="Sklonista" asp-route-pg="1">Prva</a>
                </li>
                <li>
                    <a class="page-link" asp-controller="Admin" asp-action="Sklonista" asp-route-pg="@(pager.CurrentPage-1)">Prethodna</a>
                </li>
            }

            @for (var pge = pager.StartPage; pge <= pager.EndPage; pge++)
            {
                <li class="page-item @(pge==pager.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-controller="Admin" asp-action="Sklonista" asp-route-pg="@pge"> @pge </a>
                </li>
            }

            @if (pager.CurrentPage < pager.TotalPages)
            {
                <li>
                    <a class="page-link" asp-controller="Admin" asp-action="Sklonista" asp-route-pg="@(pager.CurrentPage+1)">Iduća</a>
                </li>
                <li>
                    <a class="page-link" asp-controller="Admin" asp-action="Sklonista" asp-route-pg="@(pager.TotalPages)">Zadnja</a>
                </li>
            }
        </ul>
    }

</div>
