@model PIS_projekt.Models.Skloniste

@{
    ViewData["Title"] = "NovoSkloniste";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>NovoSkloniste</h1>

<h4>Skloniste</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="Admin" asp-action="SpremiSkloniste">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NazivSklonista" class="control-label"></label>
                <input asp-for="NazivSklonista" class="form-control" />
                <span asp-validation-for="NazivSklonista" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Adresa" class="control-label"></label>
                <input asp-for="Adresa" class="form-control" />
                <span asp-validation-for="Adresa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KapacitetSklonista" class="control-label"></label>
                <input asp-for="KapacitetSklonista" class="form-control" />
                <span asp-validation-for="KapacitetSklonista" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefon" class="control-label"></label>
                <input asp-for="Telefon" class="form-control" />
                <span asp-validation-for="Telefon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GradId" class="control-label"></label>
                <select asp-for="GradId" class="form-control" asp-items="ViewBag.Gradovi">
                    <option disabled selected value="">Izaberite mjesto</option>
                </select>
                <span asp-validation-for="GradId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Spremi" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Admin" asp-action="Sklonista">Povratak</a>
</div>

@section Scripts {
    
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
